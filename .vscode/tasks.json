{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe VCPKG",
            "command": "C:\\cpp\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-std=c++20",
                "-g",
                "${file}",
                "${fileDirname}\\methods\\*.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-IC:\\cpp\\vcpkg\\installed\\x64-mingw-static\\include",
                "-LC:\\cpp\\vcpkg\\installed\\x64-mingw-static\\lib",
                "-lcurl",
                "-lssl",
                "-lcrypto",
                "-lws2_32",
                "-lbcrypt",
                "-lcrypt32",
                "-lwinmm",
                "-lnlohmann_json_schema_validator"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task that compiles using the libcurl library."
        }
    ],
    "version": "2.0.0"
}